CC = c++
FLAGS = -Wall -Wextra -Werror -std=c++98
SOURCES = main.cpp ScalarConverter.cpp
OBJECTS = $(SOURCES:%.cpp=%.o)
PROGRAM = ScalarConverter

all: $(PROGRAM)

%.o: %.cpp
		$(CC) $(FLAGS) -c $< -o $@

${PROGRAM}: $(OBJECTS)
		$(CC) $(FLAGS) $(OBJECTS) -o $(PROGRAM)

clean:
		rm -f $(OBJECTS)

fclean: clean
		rm -f $(PROGRAM)

re: fclean all

full: re
		make clean
		clear

.PHONY: all clean fclean re full